<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Other views or layouts in your activity -->
<TextView
    android:id="@+id/sumaimg"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:text="SEE DIRECTIONS HERE....."
    android:textColor="@color/white"
    android:contentDescription="summa image"
    android:background="@drawable/img_1"
    android:textStyle="bold"
    android:textSize="20sp"
    android:paddingTop="10sp"
    android:paddingStart="80sp"
    />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sumaimg"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#936F04"
            android:background="@color/white"
            android:textSize="20sp"
            android:text="tap bus stop icon to see the stop name....."
            />

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sumaimg"/>

</RelativeLayout>
